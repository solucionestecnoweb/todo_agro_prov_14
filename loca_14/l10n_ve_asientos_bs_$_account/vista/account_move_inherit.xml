        <field name="arch" type="xml">
           <xpath expr="//field[@name='credit']" position="after">  
                <field name="debit_aux" string="Debito $" sum="debit_aux"/>
                <field name="credit_aux" string="Credito $" sum="credit_aux"/>
              
            </xpath>
        </field>
    </record>
